-- âš¡ Saii's Complete Pet Spawner (One-File Version)

local Players, UIS, RS, HttpService = game:GetService("Players"), game:GetService("UserInputService"), game:GetService("ReplicatedStorage"), game:GetService("HttpService")
local LocalPlayer = Players.LocalPlayer
local Mouse = LocalPlayer:GetMouse()

-- GUI
local gui = Instance.new("ScreenGui", LocalPlayer:WaitForChild("PlayerGui")) gui.Name = "Spawner" gui.ResetOnSpawn = false
local frame = Instance.new("Frame", gui) frame.Size = UDim2.new(0,500,0,340) frame.Position = UDim2.new(0.5,-250,0.5,-170) frame.AnchorPoint = Vector2.new(0.5, 0.5) frame.BackgroundColor3 = Color3.fromRGB(20,20,20) frame.BackgroundTransparency = 0.1 Instance.new("UICorner", frame).CornerRadius = UDim.new(0,12) Instance.new("UIStroke", frame).Color = Color3.fromRGB(40,255,60)
local title = Instance.new("TextLabel", frame) title.Size = UDim2.new(1,0,0,40) title.Text = "âš¡ Saii's Pet Spawner" title.Font = Enum.Font.GothamBlack title.TextSize = 24 title.TextColor3 = Color3.fromRGB(0,255,100) title.BackgroundTransparency = 1

-- Drag
local dragging, dragStart, startPos
frame.InputBegan:Connect(function(input) if input.UserInputType == Enum.UserInputType.MouseButton1 then dragging = true dragStart = input.Position startPos = frame.Position end end)
frame.InputEnded:Connect(function(input) if input.UserInputType == Enum.UserInputType.MouseButton1 then dragging = false end end)
UIS.InputChanged:Connect(function(input) if dragging and input.UserInputType == Enum.UserInputType.MouseMovement then local delta = input.Position - dragStart frame.Position = UDim2.new(startPos.X.Scale, startPos.X.Offset + delta.X, startPos.Y.Scale, startPos.Y.Offset + delta.Y) end end)

-- Buttons
local types, selected, buttons = {"NP","F","R","FR","N","NR","NF","NFR","M","MR","MF","MFR"}, "NP", {}
local function resetColors() for _,b in pairs(buttons) do b.TextColor3 = Color3.fromRGB(255,255,255) b.UIStroke.Color = Color3.fromRGB(40,40,40) end end
for i, type in ipairs(types) do local b = Instance.new("TextButton", frame) b.Size = UDim2.new(0,90,0,35) b.Position = UDim2.new(0,15+((i-1)%4)*115,0,50+math.floor((i-1)/4)*40) b.Text = type b.Font = Enum.Font.GothamBold b.TextScaled = true b.TextColor3 = Color3.fromRGB(255,255,255) b.BackgroundColor3 = Color3.fromRGB(30,30,30) Instance.new("UICorner", b).CornerRadius = UDim.new(0,8) local stroke = Instance.new("UIStroke", b) stroke.Color = Color3.fromRGB(40,40,40) stroke.Thickness = 1 b.MouseEnter:Connect(function() if selected ~= type then b.TextColor3 = Color3.fromRGB(80,255,80) end end) b.MouseLeave:Connect(function() if selected ~= type then b.TextColor3 = Color3.fromRGB(255,255,255) end end) b.MouseButton1Click:Connect(function() resetColors() b.TextColor3 = Color3.fromRGB(25,255,21) stroke.Color = Color3.fromRGB(0,255,100) selected = type end) table.insert(buttons, b) end

-- Input
local nameBox = Instance.new("TextBox", frame) nameBox.Size = UDim2.new(0,400,0,40) nameBox.Position = UDim2.new(0.5,-200,1,-90) nameBox.PlaceholderText = "Enter Pet Name..." nameBox.Text = "" nameBox.Font = Enum.Font.Gotham nameBox.TextScaled = true nameBox.TextColor3 = Color3.fromRGB(255,255,255) nameBox.BackgroundColor3 = Color3.fromRGB(30,30,30) Instance.new("UICorner", nameBox).CornerRadius = UDim.new(0,8) Instance.new("UIStroke", nameBox).Color = Color3.fromRGB(50,255,100)

-- Spawn
local spawnBtn = Instance.new("TextButton", frame) spawnBtn.Size = UDim2.new(0,180,0,40) spawnBtn.Position = UDim2.new(0.5,-90,1,-40) spawnBtn.Text = "ðŸŽ¯ Spawn Pet" spawnBtn.Font = Enum.Font.GothamBlack spawnBtn.TextScaled = true spawnBtn.TextColor3 = Color3.fromRGB(255,255,255) spawnBtn.BackgroundColor3 = Color3.fromRGB(20,80,20) Instance.new("UICorner", spawnBtn).CornerRadius = UDim.new(0,10) Instance.new("UIStroke", spawnBtn).Color = Color3.fromRGB(0,255,100)

-- Props Logic
local function generateProps()
	return {
		flyable = selected:find("F") ~= nil,
		rideable = selected:find("R") ~= nil,
		neon = selected:find("N") ~= nil and not selected:find("M"),
		mega_neon = selected:find("M") ~= nil,
		age = 1
	}
end

-- Clone Helper
local function deepClone(tbl)
	local clone = {} for k,v in pairs(tbl) do clone[k] = typeof(v) == "table" and deepClone(v) or v end return clone
end

-- Spawn Logic
spawnBtn.MouseButton1Click:Connect(function()
	if nameBox.Text == "" then return end
	local Fsys = require(RS:WaitForChild("Fsys"))
	local ClientData = Fsys.load("ClientData")
	local InventoryDB = Fsys.load("InventoryDB")
	local Inventory = ClientData.get("inventory")
	for _, pets in pairs(InventoryDB) do
		for id, item in pairs(pets) do
			if item.name:lower() == nameBox.Text:lower() then
				local newPet = deepClone(item)
				local uuid = "uuid_"..HttpService:GenerateGUID(false)
				newPet.unique = uuid
				newPet.category = "pets"
				newPet.properties = generateProps()
				newPet.newness_order = math.random(10000, 900000)
				Inventory.pets = Inventory.pets or {}
				Inventory.pets[uuid] = newPet

				-- Equip pet
				local EquipManager = Fsys.load("EquipPet")
				EquipManager.equip(uuid)

				-- Wrap and follow
				local Wrapper = Fsys.load("PetCharWrapper")
				local petChar = Wrapper.fromClient(uuid)
				if petChar then
					petChar:setOwner(LocalPlayer)
					petChar:setFollowTarget(LocalPlayer.Character)
				end
				return
			end
		end
	end
end)
