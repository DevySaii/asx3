-- StarterPlayer > StarterPlayerScripts > LocalScript

local RunService = game:GetService("RunService")
local Players = game:GetService("Players")
local localPlayer = Players.LocalPlayer

-- === üîß CONFIG: Replace any pet name with a spoofed one and image ===
local petSpoofs = {
    ["Bee"] = {
        newName = "Bat Dragon",
        newImage = "rbxassetid://14972007526"
    },
    ["Gold Cube"] = {
        newName = "Frost Dragon",
        newImage = "rbxassetid://7202980977"
    },
    ["Burning Bunny"] = {
        newName = "Shadow Dragon",
        newImage = "rbxassetid://12540769437"
    },
    -- Add more here!
}

-- === üì¶ Get the trade GUI ===
local function getTradeGui()
    local playerGui = localPlayer:FindFirstChild("PlayerGui")
    if not playerGui then return end

    -- Replace this name if your GUI is named differently
    return playerGui:FindFirstChild("TradeUI")
end

-- === ü™Ñ Replace pets visually in your side of the trade UI ===
local function spoofTradePets()
    local gui = getTradeGui()
    if not gui then return end

    -- Adjust to your side's frame in trade UI
    local yourSide = gui:FindFirstChild("YourOfferFrame") or gui:FindFirstChild("LeftSide")
    if not yourSide then return end

    for _, slot in ipairs(yourSide:GetDescendants()) do
        if slot:IsA("ImageLabel") then
            local nameLabel = slot:FindFirstChild("PetName") or slot:FindFirstChildWhichIsA("TextLabel")
            if nameLabel and petSpoofs[nameLabel.Text] then
                local spoof = petSpoofs[nameLabel.Text]
                nameLabel.Text = spoof.newName
                slot.Image = spoof.newImage
            end
        end
    end
end

-- üîÅ Continuously spoof the visuals every frame
RunService.RenderStepped:Connect(function()
    pcall(spoofTradePets)
end)
