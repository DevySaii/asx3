--// LynxIT Visual Script v2 (clean UI like Azure Modded)

local Players = game:GetService("Players")
local LocalPlayer = Players.LocalPlayer
local UIS = game:GetService("UserInputService")
local RunService = game:GetService("RunService")

--// UI Creation
local ScreenGui = Instance.new("ScreenGui", game.CoreGui)
ScreenGui.Name = "LynxITGui"
ScreenGui.ResetOnSpawn = false

local MainFrame = Instance.new("Frame", ScreenGui)
MainFrame.Size = UDim2.new(0, 400, 0, 280)
MainFrame.Position = UDim2.new(0.5, -200, 0.5, -140)
MainFrame.BackgroundColor3 = Color3.fromRGB(15, 15, 15)
MainFrame.BorderSizePixel = 0
MainFrame.Visible = true
MainFrame.Active = true
MainFrame.Draggable = true

local UIStroke = Instance.new("UIStroke", MainFrame)
UIStroke.Color = Color3.fromRGB(0, 255, 128)
UIStroke.Thickness = 2

local Title = Instance.new("TextLabel", MainFrame)
Title.Text = "LynxIT Visual Script v2"
Title.Size = UDim2.new(1, 0, 0, 30)
Title.BackgroundTransparency = 1
Title.TextColor3 = Color3.fromRGB(0, 255, 128)
Title.Font = Enum.Font.Code
Title.TextSize = 18

-- Buttons
local function createButton(text, yPos)
	local button = Instance.new("TextButton", MainFrame)
	button.Size = UDim2.new(0, 120, 0, 30)
	button.Position = UDim2.new(0, 20, 0, yPos)
	button.BackgroundColor3 = Color3.fromRGB(25, 25, 25)
	button.BorderSizePixel = 0
	button.Text = text
	button.TextColor3 = Color3.fromRGB(0, 255, 128)
	button.Font = Enum.Font.Code
	button.TextSize = 16

	local stroke = Instance.new("UIStroke", button)
	stroke.Color = Color3.fromRGB(0, 255, 128)

	return button
end

-- Labels
local function createLabel(text, yPos)
	local label = Instance.new("TextLabel", MainFrame)
	label.Size = UDim2.new(0, 200, 0, 30)
	label.Position = UDim2.new(0, 160, 0, yPos)
	label.BackgroundTransparency = 1
	label.Text = text
	label.TextColor3 = Color3.fromRGB(0, 255, 128)
	label.Font = Enum.Font.Code
	label.TextSize = 16
	label.TextXAlignment = Enum.TextXAlignment.Left
	return label
end

-- Pet Types and Names
local PetType = "NP"
local PetName = "Dog"

-- Buttons + Labels
local spawnBtn = createButton("Spawn Pet", 40)
createLabel("Spawn: "..PetType.." "..PetName, 40)

local equipBtn = createButton("Equip Pet", 80)
createLabel("Equips spawned pet", 80)

local unequipBtn = createButton("Unequip Pet", 120)
createLabel("Removes pet from you", 120)

local clearBtn = createButton("Clear All", 160)
createLabel("Despawn all pets", 160)

-- Footer
local footer = Instance.new("TextLabel", MainFrame)
footer.Size = UDim2.new(1, 0, 0, 30)
footer.Position = UDim2.new(0, 0, 1, -30)
footer.BackgroundTransparency = 1
footer.Text = "discord.gg/8SvuYKddYu"
footer.TextColor3 = Color3.fromRGB(0, 255, 128)
footer.Font = Enum.Font.Code
footer.TextSize = 14
footer.TextTransparency = 0.2

--// Pet Logic
local spawnedPet = nil

spawnBtn.MouseButton1Click:Connect(function()
	if spawnedPet then spawnedPet:Destroy() end
	spawnedPet = Instance.new("Part", workspace)
	spawnedPet.Size = Vector3.new(2, 2, 2)
	spawnedPet.Position = LocalPlayer.Character.HumanoidRootPart.Position + Vector3.new(5, 0, 0)
	spawnedPet.BrickColor = BrickColor.new("Lime green")
	spawnedPet.Name = PetType.."_"..PetName
end)

equipBtn.MouseButton1Click:Connect(function()
	if spawnedPet and LocalPlayer.Character then
		spawnedPet.Anchored = false
		local weld = Instance.new("WeldConstraint", spawnedPet)
		weld.Part0 = LocalPlayer.Character.HumanoidRootPart
		weld.Part1 = spawnedPet
	end
end)

unequipBtn.MouseButton1Click:Connect(function()
	if spawnedPet then
		for _, v in pairs(spawnedPet:GetChildren()) do
			if v:IsA("WeldConstraint") then v:Destroy() end
		end
		spawnedPet.Anchored = true
	end
end)

clearBtn.MouseButton1Click:Connect(function()
	if spawnedPet then spawnedPet:Destroy() end
	spawnedPet = nil
end)

--// Key to hide GUI
local visible = true
UIS.InputBegan:Connect(function(input, gp)
	if not gp and input.KeyCode == Enum.KeyCode.RightControl then
		visible = not visible
		MainFrame.Visible = visible
	end
end)
