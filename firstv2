local Players = game:GetService("Players")
local LocalPlayer = Players.LocalPlayer
local StarterGui = game:GetService("StarterGui")
local UIS = game:GetService("UserInputService")

local ScreenGui = Instance.new("ScreenGui", game.CoreGui)
ScreenGui.Name = "LynxIT_VisualScript_v2"

local Frame = Instance.new("Frame", ScreenGui)
Frame.Size = UDim2.new(0, 250, 0, 350)
Frame.Position = UDim2.new(0, 20, 0.5, -175)
Frame.BackgroundColor3 = Color3.fromRGB(10, 10, 10)
Frame.BorderSizePixel = 0
Frame.BackgroundTransparency = 0.1

local UICorner = Instance.new("UICorner", Frame)
UICorner.CornerRadius = UDim.new(0, 8)

local UIStroke = Instance.new("UIStroke", Frame)
UIStroke.Thickness = 2
UIStroke.Color = Color3.fromRGB(0, 255, 100)
UIStroke.Transparency = 0.2

local Title = Instance.new("TextLabel", Frame)
Title.Text = "LynxIT Visual Script v2"
Title.Size = UDim2.new(1, 0, 0, 30)
Title.BackgroundTransparency = 1
Title.TextColor3 = Color3.fromRGB(0, 255, 100)
Title.Font = Enum.Font.Code
Title.TextSize = 16

local UIListLayout = Instance.new("UIListLayout", Frame)
UIListLayout.Padding = UDim.new(0, 6)
UIListLayout.SortOrder = Enum.SortOrder.LayoutOrder

Title.LayoutOrder = 0

local PetTypes = {
    "NP", "F", "R", "FR",
    "N", "NR", "NF", "NFR",
    "M", "MR", "MF", "MFR"
}

local function createPetButton(petType)
    local button = Instance.new("TextButton")
    button.Size = UDim2.new(1, -20, 0, 30)
    button.BackgroundColor3 = Color3.fromRGB(20, 20, 20)
    button.Text = "Spawn: " .. petType
    button.Font = Enum.Font.Code
    button.TextSize = 14
    button.TextColor3 = Color3.fromRGB(0, 255, 100)
    button.AutoButtonColor = true
    button.LayoutOrder = #Frame:GetChildren()

    local corner = Instance.new("UICorner", button)
    corner.CornerRadius = UDim.new(0, 6)

    local stroke = Instance.new("UIStroke", button)
    stroke.Color = Color3.fromRGB(0, 255, 100)
    stroke.Thickness = 1
    stroke.Transparency = 0.5

    button.MouseButton1Click:Connect(function()
        local petName = "YourPetNameHere" -- CHANGE THIS TO YOUR PET NAME
        local args = {
            [1] = "SpawnPet",
            [2] = {
                ["Type"] = petType,
                ["PetName"] = petName,
                ["UserID"] = LocalPlayer.UserId
            }
        }
        game:GetService("ReplicatedStorage").RemoteFunction:InvokeServer(unpack(args))
    end)

    button.Parent = Frame
end

for _, petType in ipairs(PetTypes) do
    createPetButton(petType)
end

local Footer = Instance.new("TextLabel", Frame)
Footer.Text = "discord.gg/8SvuYKddYu"
Footer.Size = UDim2.new(1, 0, 0, 25)
Footer.BackgroundTransparency = 1
Footer.TextColor3 = Color3.fromRGB(50, 255, 100)
Footer.Font = Enum.Font.Code
Footer.TextSize = 13
Footer.TextWrapped = true
Footer.TextXAlignment = Enum.TextXAlignment.Center
Footer.LayoutOrder = 999

-- Keybind to toggle visibility
UIS.InputBegan:Connect(function(input, gameProcessed)
    if input.KeyCode == Enum.KeyCode.RightControl and not gameProcessed then
        Frame.Visible = not Frame.Visible
    end
end)
