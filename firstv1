--== Pet Changer UI ==--

-- Replace Name Box
local replaceBox = Instance.new("TextBox", main)
replaceBox.Position = UDim2.new(0.05, 0, 0.95, 0)
replaceBox.Size = UDim2.new(0.27, 0, 0.07, 0)
replaceBox.PlaceholderText = "Old Name"
replaceBox.TextColor3 = Color3.fromRGB(255, 255, 255)
replaceBox.BackgroundColor3 = Color3.fromRGB(40, 40, 40)
replaceBox.Font = Enum.Font.Gotham
replaceBox.TextScaled = true

local replaceCorner = Instance.new("UICorner", replaceBox)
replaceCorner.CornerRadius = UDim.new(0, 6)

-- New Name Box
local newBox = Instance.new("TextBox", main)
newBox.Position = UDim2.new(0.36, 0, 0.95, 0)
newBox.Size = UDim2.new(0.27, 0, 0.07, 0)
newBox.PlaceholderText = "New Name"
newBox.TextColor3 = Color3.fromRGB(255, 255, 255)
newBox.BackgroundColor3 = Color3.fromRGB(40, 40, 40)
newBox.Font = Enum.Font.Gotham
newBox.TextScaled = true

local newCorner = Instance.new("UICorner", newBox)
newCorner.CornerRadius = UDim.new(0, 6)

-- Change Button
local changeBtn = Instance.new("TextButton", main)
changeBtn.Position = UDim2.new(0.7, 0, 0.95, 0)
changeBtn.Size = UDim2.new(0.25, 0, 0.07, 0)
changeBtn.Text = "ðŸ”„ Change"
changeBtn.TextColor3 = Color3.fromRGB(255, 255, 255)
changeBtn.BackgroundColor3 = Color3.fromRGB(255, 100, 100)
changeBtn.Font = Enum.Font.GothamBold
changeBtn.TextScaled = true

local changeCorner = Instance.new("UICorner", changeBtn)
changeCorner.CornerRadius = UDim.new(0, 6)

-- Replace pet logic
changeBtn.MouseButton1Click:Connect(function()
	local oldName = replaceBox.Text
	local newName = newBox.Text
	if oldName == "" or newName == "" then return end

	local Fsys = require(game.ReplicatedStorage.Fsys)
	local ClientData = Fsys.load("ClientData")
	local Inventory = ClientData.get("inventory")

	local function getProps()
		return {
			rideable = petType:find("R") and true or false,
			flyable = petType:find("F") and true or false,
			neon = petType:find("N") and true or false,
			mega_neon = petType:find("M") and true or false,
			age = 1
		}
	end

	for id, item in pairs(Inventory.pets or {}) do
		if item.name == oldName then
			item.name = newName
			item.properties = getProps()
		end
	end
end)
